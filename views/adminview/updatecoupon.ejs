
<%- include('header') -%>




<div class="card coupon-form w-25 mx-auto mt-5">
    <div class="card-body">
        <h5 class="card-title text-center mb-4">EDIT COUPON</h5>
        <form class="" action="/updatecouponpost/<%= coupondetails._id %>" method="post">
            <div class="mb-3">
                <label for="couponCode" class="form-label">Coupon Code</label>
                <input type="text" value="<%= coupondetails.couponcode %>" class="form-control" id="couponCode" name="couponcode">
            </div>
            <div class="mb-3">
                <label for="discount" class="form-label">Discount</label>
                <input type="number" value="<%= coupondetails.discount %>" class="form-control" id="discount" name="discount">
            </div>
            <div class="mb-3">
                <label for="expireDate" class="form-label">Expire Date</label>
                <input type="date" value="<%= coupondetails.expiredate.toISOString().slice(0, 10) %>" class="form-control" id="expireDate" name="selectedDate">
            </div>
            <div class="mb-3">
                <label for="minPrice" class="form-label">Minimum Purchase</label>
                <input type="number" value="<%= coupondetails.minamount %>" class="form-control" id="minPrice" name="minprice">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
        
    </div>
</div>



