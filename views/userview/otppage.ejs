        <!-- for otp timer -->

        <script>
          let countdownValue = 60; // Set the initial countdown value in seconds
      
          function startTimer() {
            const countdownElement = document.getElementById('countdown');
            const resendButton = document.querySelector('button');
      
            resendButton.disabled = true; // Disable the resend button during the countdown
      
            const countdownInterval = setInterval(() => {
              const minutes = Math.floor(countdownValue / 60);
              const seconds = countdownValue % 60;
      
              countdownElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
      
              if (countdownValue === 0) {
                clearInterval(countdownInterval); // Stop the countdown
                resendButton.disabled = false; // Enable the resend button
              } else {
                countdownValue--;
              }
            }, 1000);
          }

          window.onload=startTimer()
        </script>


