<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('form').addEventListener('submit', async function (event) {
      console.log('form submitted');
  
            var nameInput = document.querySelector('input[name="name"]');
          
  
  
            var nameErrorMessage = document.getElementById('name-error');
           
         
            // Reset error messages
          
            nameErrorMessage.style.display = 'none';
  
          //for name validation 
          if(nameInput.value.trim() === ''){
            nameErrorMessage.innerText="name cannot be empty"
            nameErrorMessage.style.display='block';
            event.preventDefault();
          }
  


        
  
        })

    });
    
    function validateFile(event) {
    const fileInput = document.querySelector('input[type="file"]');
    const file = fileInput.files[0];
    const validImageTypes = ['image/gif', 'image/jpeg', 'image/png'];
    const fileError = document.getElementById('fileError');

    if (!validImageTypes.includes(file.type)) {
        fileError.textContent = 'Invalid file type. Only GIF, JPEG, and PNG images are allowed.';
        // Prevent form submission
        event.preventDefault();
        // Optionally clear the input value
        fileInput.value = ''; // Resets the input so the user can choose another file
    } else {
        // Clear the error message if a valid file is selected
        fileError.textContent = '';
    }
}



  </script>    





